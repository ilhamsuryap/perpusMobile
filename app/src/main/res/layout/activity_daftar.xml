<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.RegisterActivity">

    <TextView
        android:id="@+id/libraria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="Lets Sign Up First!!"
        android:textColor="#3C969F"
        android:textSize="50sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/usr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="#3C969F"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/libraria" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputuser"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usr">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textColor="#3C969F"
            android:id="@+id/inputuserEdit"
            android:hint="Email" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/pss"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="#3C969F"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputuser" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="380dp"
        android:id="@+id/inputpas"
        android:background="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pss">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3C969F"
            android:textSize="15sp"
            android:id="@+id/inputpasEdit"
            android:hint="Password" />


    </com.google.android.material.textfield.TextInputLayout>




    <android.widget.Spinner
        android:id="@+id/spinnerRole"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border1"
        app:layout_constraintTop_toBottomOf="@+id/selected_role"
        android:padding="16dp"
        />

    <TextView
        android:id="@+id/selected_role"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Role"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="#3C969F"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputpas" />

    <TextView
        android:id="@+id/code_label"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmation Code"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="#3C969F"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerRole" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="380dp"
        android:id="@+id/inputcod"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_label">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C969F"
        android:textSize="15sp"
        android:id="@+id/inputcode"
        android:hint="Confirmation Code" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="@font/poppinsblack"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="#3C969F"
        app:layout_constraintTop_toBottomOf="@id/inputcod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
